<Window x:Class="SAM.Game.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Steam Achievement Manager" Width="800" Height="450">
    <ui:NavigationView>
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="Achievements" />
        </ui:NavigationView.MenuItems>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:CommandBar Grid.Row="0">
                <ui:AppBarButton Icon="Refresh" Label="Refresh" Click="OnRefresh" />
                <ui:AppBarButton Icon="Shop" Label="Store" Click="OnStore" />
            </ui:CommandBar>
            <ui:InfoBar x:Name="StatusBar" Grid.Row="2" IsOpen="False" Margin="4" />
        </Grid>
    </ui:NavigationView>
</Window>
